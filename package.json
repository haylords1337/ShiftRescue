{
  "name": "shiftrescue",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "start:dev": "concurrently -k npm:watch-*",
    "watch-client": "cd client && npm start",
    "watch-server": "nodemon --ignore \"client/\" index.js",
    "build": "cd client && npm run build",
    "install": "cd client && npm install",
    "lint-client": "prettier --check client/src/**/*.{js,css}",
    "lint-server": "prettier --check server/**/*.js",
    "lint": "npm run lint-server && npm run lint-client",
    "test-client": "cd client && npm run test",
    "test-server": "jest --runInBand",
    "test": "npm run test-server && npm run test-client"
  },
  "keywords": [],
  "author": "John Desrosiers",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(client/src|server)/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "http": "0.0.1-security",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.9.21",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "twilio": "^3.47.0",
    "twilio-cli": "^2.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  }
}
